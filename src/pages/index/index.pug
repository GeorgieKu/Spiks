                        span.acc__text Greenhouse
                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox8") chose Light Deprivation
                        input(type='checkbox' id='checkbox8'  class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Light Deprivation
                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox9") chose Mixed Light
                        input(type='checkbox' id='checkbox9' class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Mixed Light
                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox10") chose Other
                        input(type='checkbox' id='checkbox10' class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Other
              h2.hero__accardeon.acc Size  
                svg(width="13" height="12")
                  use(xlink:href="assets/sprites/default/sprite.svg#acc-arrow")   
              .acc__content.open
                .acc__text-wrapper
                  ul.acc__list 
                    li.acc__item 
                      .acc__custom-checkbox.acc__custom-checkbox_active
                        label.visually-hidden(for="checkbox11") chose Flower
                        input(type='checkbox' id='checkbox11' checked class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Flower
                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox12") chose Pre-Roll Flower
                        input(type='checkbox' id="checkbox12"  class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Pre-Roll Flower
                    li.acc__item 
                      .acc__custom-checkbox
                        label.visually-hidden(for="checkbox13") chose Pre-Roll Infused
                        input(type='checkbox' id="checkbox13" class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Pre-Roll Infused
                    li.acc__item 
