                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox15") chose Shake
                        input(type='checkbox' id='checkbox15'  class='visually-hidden')
                        span.acc__checkbox
                        span.acc__text Shake
                    li.acc__item 
                      .acc__custom-checkbox 
                        label.visually-hidden(for="checkbox16") chose Smalls 
                        input(type='checkbox' id='checkbox16' class='visually-hidden')
